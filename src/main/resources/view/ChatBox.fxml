<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<!--        @@author ryantianj-reused-->
<fx:root alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
         minHeight="-Infinity" prefWidth="400.0"
         style="-fx-background-color: black; -fx-background-radius: 10; -fx-background-insets: 5;"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" text="Label" wrapText="true" style="-fx-text-fill: white; -fx-font-weight: bold">
            <font>
                <Font name="Courier New" size="14.0"/>
            </font>
            <padding>
                <Insets left="5.0" right="5.0"/>
            </padding>
        </Label>
        <ImageView fx:id="displayPicture" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true"/>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
</fx:root>
