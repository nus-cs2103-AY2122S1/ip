<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<fx:root alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMouseEntered="#showActions" onMouseExited="#hideActions" prefWidth="400.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <Button id="copyButton" fx:id="copyButton" minHeight="30.0" minWidth="50.0" mnemonicParsing="false" onAction="#onClckCopy" stylesheets="@Theme.css" text="Copy" />
      <TextFlow fx:id="textFlow" minWidth="150.0">
         <children>
            <Text fx:id="dialog" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
               <font>
                  <Font name="Open Sans Regular" size="14.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <HBox.margin>
            <Insets left="10.0" right="10.0" />
         </HBox.margin>
      </TextFlow>
        <ImageView fx:id="displayPicture" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
    </padding>
</fx:root>
