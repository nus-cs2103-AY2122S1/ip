<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root fx:id = "dialogBox" alignment="TOP_RIGHT" prefWidth="400.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" minHeight="-Infinity">
    <children>
        <Label fx:id="dialog" text="Label" textOverrun="CLIP" wrapText="true" HBox.hgrow="ALWAYS" />
        <ImageView fx:id="displayPicture" fitHeight="200" fitWidth="120" pickOnBounds="true" preserveRatio="true"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0"/>
    </padding>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</fx:root>
