<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<fx:root alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308" prefWidth="300.0"
         type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/11.0.1"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" text="Label" wrapText="true"
                style="-fx-padding: 20px; -fx-background-color: burlywood;
                        -fx-background-radius: 20; -fx-opacity: 0.9;
                        -fx-font-weight: bold;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <font>
                <Font  size="15.0" />
            </font>
            <HBox.margin>
                <Insets left="20.0" />
            </HBox.margin>
        </Label>
        <ImageView fx:id="displayPicture" fitHeight="100.0" fitWidth="100.0"
                   pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>
