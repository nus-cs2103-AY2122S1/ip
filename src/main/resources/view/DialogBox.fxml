<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_RIGHT" prefWidth="400.0" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" alignment="CENTER" blendMode="SRC_ATOP" focusTraversable="false" maxHeight="Infinity" minHeight="-Infinity" prefWidth="270.0" style="-fx-background-color: #000000; -fx-opacity: 0.70;" text="Label" textFill="WHITE" wrapText="true">
         <font>
            <Font name="Arial" size="13.0" />
         </font>
         <HBox.margin>
            <Insets left="10.0" right="10.0" top="1.0" />
         </HBox.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets></Label>
        <ImageView fx:id="displayPicture" fitHeight="99.0" fitWidth="99.0" pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>
