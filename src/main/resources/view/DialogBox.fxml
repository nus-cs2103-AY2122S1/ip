<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>

<fx:root alignment="TOP_RIGHT" maxHeight="Infinity" maxWidth="Infinity" type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog" styleClass="dialog-box" text="Label" wrapText="true" minHeight="-Infinity"
               minWidth="-Infinity" alignment="TOP_CENTER"/>
        <ImageView fx:id="displayPicture" fitHeight="66.0" fitWidth="66.0" pickOnBounds="true" preserveRatio="true" />
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
    <stylesheets>
        <URL value="@../viewStyle/index.css"/>
    </stylesheets>
</fx:root>
