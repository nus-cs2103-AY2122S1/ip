<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<javafx.scene.layout.HBox
    alignment="TOP_RIGHT"
    maxWidth="Infinity"
    minWidth="-Infinity"
    maxHeight="Infinity"
    prefWidth="0"
    spacing="10.0"
    style="-fx-background-color: #1b262c;"
    xmlns="http://javafx.com/javafx/11"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="duke.gui.DialogBox">

    <children>
        
        <Region
            prefWidth="100"
            HBox.hgrow="ALWAYS"/>

        <Label
            fx:id="dialog"
            text="Label"
            wrapText="true"
            minHeight="-Infinity"
            maxHeight="Infinity"
            maxWidth="500"
            style="-fx-background-color: #bbe1fa; -fx-background-radius: 5;">

            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </padding>

        </Label>

        <ImageView
            fx:id="displayPicture"
            fitHeight="60.0"
            fitWidth="60.0"
            pickOnBounds="true"
            preserveRatio="true"
            smooth="false"
            HBox.hgrow="NEVER">
            <image>
                <Image url="images/DaUser.png" />
            </image>
        </ImageView>
    </children>
  
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>

</javafx.scene.layout.HBox>
