<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane
        maxHeight="-Infinity" maxWidth="-Infinity"
        minHeight="-Infinity" minWidth="-Infinity"
        prefHeight="600.0" prefWidth="500.0"
        xmlns="http://javafx.com/javafx/11.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="duke.ui.MainWindow">
    <children>
        <TextField fx:id="userInput" layoutY="558.0"
                   onAction="#handleUserInput" prefHeight="41.0"
                   prefWidth="424.0" promptText="Enter something..." />
        <Button fx:id="sendButton" layoutX="424.0" layoutY="558.0"
                mnemonicParsing="false" onAction="#handleUserInput"
                prefHeight="41.0" prefWidth="76.0" text="Send" />
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" hvalue="1.0"
                    prefHeight="557.0" prefWidth="500.0" vvalue="1.0">
            <content>
                <VBox fx:id="dialogContainer" prefHeight="552.0" prefWidth="488.0"
                      style="-fx-background-image: url(/images/newyork.jpg);
                            -fx-background-size: 100%"/>
            </content>
        </ScrollPane>

    </children>
</AnchorPane>
