<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<!--
    Adapted the following MainWindow configuration from https://github.com/Yukun99/ip/
    -->
<AnchorPane maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
            style="-fx-pref-height: 680; -fx-pref-width: 700; -fx-background-color: #6E4AB5;"
            xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bot.utility.MainWindow">
    <TextField fx:id="userInput" onAction="#handleUserInput" prefHeight="40.0" prefWidth="620.0" AnchorPane.bottomAnchor="0.0" />
    <Button fx:id="sendButton" layoutX="620.0" mnemonicParsing="false" onAction="#handleUserInput" prefHeight="40.0" prefWidth="80.0" text="Send" AnchorPane.bottomAnchor="0.0" />
    <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" hvalue="1.0" style="                 -fx-max-width: 700;                 -fx-background-color: #6E4AB5;" vbarPolicy="ALWAYS" vvalue="1.0">
        <VBox fx:id="dialogContainer" prefHeight="593.0" prefWidth="677.0" style="-fx-alignment: TOP_CENTER; -fx-background-color: #6E4AB5; -fx-padding: 12; -fx-pref-height: 640; -fx-pref-width: 690;" />
    </ScrollPane>
</AnchorPane>
