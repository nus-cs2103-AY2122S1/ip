<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="600.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="duke.javafx.MainWindow">
    <TextField fx:id="userInput" layoutX="8.0" layoutY="558.0" onAction="#handleUserInput"
               prefHeight="28.0" prefWidth="307.0"
               promptText="Type command here..."
               AnchorPane.bottomAnchor="9.0"/>
    <Button fx:id="sendButton" alignment="CENTER" layoutX="324.0"
            layoutY="561.0" mnemonicParsing="false"
            onAction="#handleUserInput" prefHeight="31.0" prefWidth="69.0"
            text="Send"/>
    <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" hvalue="1.0"
                prefHeight="557.0" prefWidth="400.0" vvalue="1.0">
        <VBox fx:id="dialogContainer" prefHeight="552.0" prefWidth="388.0"/>
    </ScrollPane>
</AnchorPane>
