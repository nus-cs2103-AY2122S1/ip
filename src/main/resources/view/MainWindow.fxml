<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="javafxgui.MainWindow"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
            <children>
                <TextField fx:id="userInput" minHeight="41.0" minWidth="324.0" onAction="#handleUserInput" AnchorPane.bottomAnchor="1.0" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                <Button fx:id="sendButton" minHeight="41.0" minWidth="76.0" mnemonicParsing="false" onAction="#handleUserInput" text="Send" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                <ScrollPane fx:id="scrollPane" style="-fx-background: #fff2e5;-fx-border-color: #fff2e5" fitToWidth="true" hbarPolicy="NEVER" hvalue="1.0" maxHeight="Infinity" vvalue="1.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
                    <content>
                        <VBox fx:id="dialogContainer" maxHeight="Infinity" />
                    </content>
                </ScrollPane>
            </children>
        </GridPane>
    </children>
</AnchorPane>
