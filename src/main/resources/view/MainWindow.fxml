<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane
    maxHeight="Infinity"
    maxWidth="Infinity"
    minHeight="-Infinity"
    minWidth="-Infinity"
    prefHeight="700.0"
    prefWidth="800.0"
    style="-fx-background-color: black;"
    xmlns="http://javafx.com/javafx/11"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="duke.gui.MainWindow">

    <children>
        <VBox
            maxHeight="Infinity"
            maxWidth="1.7976931348623157E308"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="600.0"
            prefWidth="400.0"
            AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0">
         
            <children>
                <ScrollPane
                    fx:id="scrollPane"
                    fitToHeight="true"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    maxHeight="1.7976931348623157E308"
                    maxWidth="1.7976931348623157E308"
                    minHeight="-Infinity"
                    minWidth="-Infinity"
                    pannable="true"
                    prefHeight="540.0"
                    prefWidth="400.0"
                    style="-fx-background-color: #1b262c;"
                    vbarPolicy="ALWAYS"
                    vvalue="1.0"
                    VBox.vgrow="ALWAYS">
                
                    <content>
                        <VBox
                            fx:id="dialogContainer"
                            maxHeight="Infinity"
                            maxWidth="Infinity"
                            minHeight="-Infinity"
                            minWidth="-Infinity"
                            prefWidth="375.0"
                            spacing="5.0"
                            style="-fx-background-color: #1b262c;"
                            VBox.vgrow="ALWAYS"/>
                    </content>

                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </ScrollPane>

                <HBox
                    maxHeight="Infinity"
                    maxWidth="1.7976931348623157E308"
                    minHeight="-Infinity"
                    minWidth="-Infinity"
                    prefHeight="60.0"
                    prefWidth="400.0"
                    style="-fx-background-color: #0f4c75;">
                    
                    <children>
                        <TextField
                            fx:id="userInput"
                            maxHeight="Infinity"
                            maxWidth="1.7976931348623157E308"
                            minHeight="-Infinity"
                            minWidth="-Infinity"
                            onAction="#handleUserInput"
                            prefHeight="60.0"
                            prefWidth="320.0"
                            promptText="Enter a command!"
                            style="-fx-background-color: #0f4c75; -fx-text-fill: white;"
                            HBox.hgrow="ALWAYS">
                        
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                        </TextField>

                        <Button
                            fx:id="sendButton"
                            maxHeight="Infinity"
                            maxWidth="-Infinity"
                            minHeight="-Infinity"
                            minWidth="-Infinity"
                            mnemonicParsing="false"
                            onAction="#handleUserInput"
                            prefHeight="60.0"
                            prefWidth="80.0"
                            style="-fx-background-color: #3282b8;"
                            text="Send"
                            HBox.hgrow="NEVER"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>