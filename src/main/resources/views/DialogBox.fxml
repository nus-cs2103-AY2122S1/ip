<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER_RIGHT" maxHeight="Infinity" maxWidth="Infinity"
         minWidth="-Infinity"
         minHeight="-Infinity" prefWidth="400.0" type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/11"
>
    <padding>
        <Insets bottom="10.0" top="10.0" left="5.0" right="5.0"/>
    </padding>
    <HBox fx:id="speechBubble" alignment="CENTER_RIGHT" fillHeight="false" styleClass="speech-bubble">
        <padding>
            <Insets bottom="10.0" top="10.0" left="5.0" right="5.0"/>
        </padding>
        <HBox.margin>
            <Insets left="5.0" right="5.0"/>
        </HBox.margin>
        <Label fx:id="dialog" text="Label" wrapText="true" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="5.0" left="15.0" right="15.0" top="5.0"/>
            </padding>
        </Label>
    </HBox>
    <ImageView fx:id="displayPicture" fitHeight="60.0" fitWidth="60.0" pickOnBounds="true">
        <HBox.margin>
            <Insets right="5.0"/>
        </HBox.margin>
    </ImageView>
</fx:root>
